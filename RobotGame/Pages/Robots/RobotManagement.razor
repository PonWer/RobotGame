@page "/robotmanagement"
@using RobotGame.Shared.Robot
@using Progress = RobotGame.Shared.Robot.Progress
@using RobotGame.Shared.Managers
@inherits RobotManagementBase

<h3>RobotManagement</h3>

<button class="btn btn-primary" @onclick="AddRobot">
    Add Robot
</button>


@foreach (var robot in Game.RobotManager.Robots)
{
    <div style="border: 1px solid black">
        <Row style="border: 1px solid black; margin-left: 0px; margin-right: 0px;">
            <Column ColumnSize="ColumnSize.Is6">
                <span class="oi oi-power-standby" aria-hidden="true">Battery Level:</span>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated"
                         role="progressbar"
                         aria-valuenow="@robot.Battery.Current"
                         aria-valuemin="0"
                         aria-valuemax="@robot.Battery.Max"
                         style="width: @robot.Battery.BatteryPercentage">@robot.Battery.BatteryPercentage</div>
                    </div>
                </Column>
                <Column ColumnSize="ColumnSize.Is6">
                    <span class="oi oi-heart" aria-hidden="true">FrameHealth:</span>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger"
                             role="progressbar"
                             aria-valuenow="@robot.Frame.HealthCurrent"
                             aria-valuemin="0"
                             aria-valuemax="@robot.Frame.FrameHealthMax"
                             style="width: @robot.Frame.HealthPercentage">@robot.Frame.HealthPercentage</div>
                        </div>
                    </Column>

                </Row>
                <Row style="border: 1px solid black; margin-left: 0px; margin-right: 0px;">
                    <Column ColumnSize="ColumnSize.Is4" style="border: 1px solid black">
                        Job:<select @onchange="@robot.OnSelectedJobChange" value="@robot.CurrentState.Name()">
                            @foreach (var template in AllJobs)
                            {
                                <option value=@template>@template</option>
                            }
                        </select>
                        Zone:<select @onchange="@robot.OnSelectedZoneChange" value="@robot.CurrentZone.Name">
                            @foreach (var zone in WorldManager.Instance.AllZoneNames)
                            {
                                <option value=@zone>@zone</option>
                            }
                        </select><Check TValue="bool" @bind-Checked="@robot.ReturnToPreviousStateOnMaxBattery">Repeat Job:</Check>
                    </Column>
                    <Column ColumnSize="ColumnSize.Is8">
                        @if (robot.CurrentProgress != null)
                        {
                            <span class="oi oi-person" aria-hidden="true"></span>
                            @foreach (var spot in robot.CurrentProgress.Path)
                            {

                                switch (spot)
                                {
                                    case Progress.Obstacle.Tree:
                                        <img src="images/Tree_LowRes.jpg" alt="Image" />
                                        break;
                                    case Progress.Obstacle.OreVein:
                                        <img src="images/MineOre_LowRes.jpg" alt="Image" />
                                        break;
                                    case Progress.Obstacle.Enemy:
                                        <img src="images/Enemy_LowRes.jpg" alt="Image" />
                                        break;
                                    case Progress.Obstacle.Empty:
                                        <img src="images/Empty_LowRes.jpg" alt="Image" />
                                        break;
                                    default:
                                        <span>ERROR MISSING IMAGE</span>
                                        break;
                                }

                            }
                        }
                        else
                        {
                            <span>No progress</span>
                        }
                    </Column>
                </Row>
                <div style="border: 1px solid black">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: @robot.Storage.WoodPercentage" aria-valuenow="@robot.Storage.Wood" aria-valuemin="0" aria-valuemax="@robot.Storage.MaxStorage">Wood</div>
                        <div class="progress-bar bg-success" role="progressbar" style="width: @robot.Storage.IronPercentage" aria-valuenow="@robot.Storage.Iron" aria-valuemin="0" aria-valuemax="@robot.Storage.MaxStorage">Iron</div>
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @robot.Storage.CopperPercentage" aria-valuenow="@robot.Storage.Copper" aria-valuemin="0" aria-valuemax="@robot.Storage.MaxStorage">Copper</div>
                        <div class="progress-bar bg-primary" role="progressbar" style="width: @robot.Storage.LithiumPercentage" aria-valuenow="@robot.Storage.Lithium" aria-valuemin="0" aria-valuemax="@robot.Storage.MaxStorage">Lithium</div>
                        <div class="progress-bar bg-info" role="progressbar" style="width: @robot.Storage.ScrapPercentage" aria-valuenow="@robot.Storage.Scrap" aria-valuemin="0" aria-valuemax="@robot.Storage.MaxStorage">Scrap</div>
                    </div>
                </div>
            </div>
            <br />
        }